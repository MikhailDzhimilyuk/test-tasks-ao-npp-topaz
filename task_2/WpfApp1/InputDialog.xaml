<Window 
	x:Class="WpfApp1.InputDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Ввод значения" Height="250" Width="400">
	<StackPanel>
		<Border BorderBrush="Gray" BorderThickness="1" CornerRadius="3" Width="200" Margin="0,30,0,80">
			<TextBox Style="{StaticResource PlaceholderTextBox}" x:Name="InputTextBox" Margin="2,3,2,5" />
		</Border>
		
		<Button Content="Ок" Width="75" Click="OkButton_Click" />
	</StackPanel>
</Window>